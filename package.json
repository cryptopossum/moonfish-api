{
  "name": "moonfish-api",
  "version": "0.0.1",
  "description": "Open Software for Token Distribution",
  "main": "dist",
  "license": "MIT",
  "engines": {
    "node": ">=9.6.1"
  },
  "pre-commit": [
    "lint"
  ],
  "scripts": {
    "dev": "nodemon -w src --exec \"MOCK_EMAIL=true NODE_ENV=dev node src/index.js\"",
    "start": "NODE_ENV=prod node src/index",
    "lint": "eslint src",
    "test": "jest -i src",
    "test:watch": "jest --watch -i src",
    "build:emails": "node emails/build"
  },
  "dependencies": {
    "bcrypt": "^1.0.3",
    "body-parser": "^1.18.2",
    "cors": "^2.8.4",
    "express": "^4.16.2",
    "jsonwebtoken": "^8.1.1",
    "mongoose": "^5.0.7",
    "morgan": "^1.9.0",
    "node-env-configuration": "^1.0.3",
    "postmark": "^1.5.0",
    "request": "^2.83.0",
    "request-promise-native": "^1.0.5"
  },
  "devDependencies": {
    "eslint": "^4.18.1",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-plugin-import": "^2.9.0",
    "eslint-plugin-jest": "^21.12.2",
    "jest": "^22.4.2",
    "juice": "^4.2.2",
    "nodemon": "^1.15.1",
    "pre-commit": "^1.2.2",
    "supertest": "^3.0.0"
  },
  "jest": {
    "setupFiles": [
      "<rootDir>/scripts/setup-tests.js"
    ]
  }
}
